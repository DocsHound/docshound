{
  "compilerOptions": {
    "target": "es2018",
    // Allow absolute imports (e.g., styles/theme instead of ../styles/theme)
    "baseUrl": ".",
    "paths": {
      "*": ["./*"]
    },
    "lib": ["es2018", "esnext.asynciterable"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
